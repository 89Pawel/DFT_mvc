@model IEnumerable<DFT_MVC.Data.ImageData>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OriginalFileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OriginalType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OriginalContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullscreenContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThumbnailBigContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThumbnailSmallContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OriginalFileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginalType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginalContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullscreenContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThumbnailBigContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThumbnailSmallContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategoria.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
