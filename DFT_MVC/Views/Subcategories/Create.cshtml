@using DFT_MVC.Models
@model DFT_MVC.Models.Subcategory

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Subcategory for @ViewBag.CategoryName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="CategoryId" value="@ViewBag.CategoryId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="file" name="image" class="form-control" />

@*            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <label asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></label>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger" asp-action="Index" asp-route-id="@ViewBag.CategoryId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
