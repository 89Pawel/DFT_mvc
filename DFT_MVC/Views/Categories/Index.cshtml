@using DFT_MVC.Data
@model IEnumerable<Category>

@{
	ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="css/site.css">
<link rel="stylesheet" href="css/alertMsg.css">


<h1>Lista Kategorii</h1>

@if (TempData["ResultMessage"] != null)
{
	var delete = "#D0342C"; // czerwony
	var create = "#53D02C"; // zielony
	var update = "#2C82D0"; // niebieski
	var color = string.Empty;

	foreach (var alert in TempData["ResultMessage"] as IEnumerable<string>)
	{
		if (alert.EndsWith("1"))
		{
			color = create;
		}
		else if (alert.EndsWith("2"))
		{
			color = update;
		}
		else if (alert.EndsWith("3"))
		{
			color = delete;
		}
	}

	<div class="alert">
		<style>
			.alert {
				background-color: @color; /* green */
			}
		</style>
		<span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
		@foreach (var item in TempData["ResultMessage"] as IEnumerable<string>)
		{
			<a>@item.Remove(item.Length - 1)</a>
		}
	</div>
}

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>Nazwa</th>
			<th>Zdjęcie</th>
			<th>Data utworzenia</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@if (item.ImageData != null)
					{
						<img src="/Images/ThumbnailSmall/@item.ImageData.Id">
					}
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CreationDate)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
					<a asp-action="Details" asp-route-id="@item.Id">Details</a>
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
